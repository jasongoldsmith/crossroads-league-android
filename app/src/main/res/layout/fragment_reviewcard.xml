<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:conversation="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/review"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="6dp"
        conversation:cardBackgroundColor="@android:color/transparent"
        app:border="true"
        app:borderColor="#979797"
        app:circularBorderWidth="1dp"
        conversation:cardElevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/img_b_g_rate_app_01"
            android:id="@+id/reviewcard_img"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="154dp"
            android:id="@+id/fragment_review_mainlayout">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp">
                <RelativeLayout
                    android:layout_width="99dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="10dp"
                    android:id="@+id/review_btn">
                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/review_button_card"
                        android:layout_alignParentRight="true"
                        conversation:cardBackgroundColor="@color/app_theme_color"
                        app:circularBorderWidth="1dp"
                        conversation:cardElevation="0dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/review_btn_text"
                        android:layout_centerInParent="true"
                        android:text="YES"
                        android:textSize="12sp"
                        android:layout_margin="11dp"
                        android:fontFamily="sans-serif"
                        android:textColor="@color/trimbe_white"
                        android:textStyle="bold"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/noreview_btn"
                    android:src="@drawable/img_cancel_x"
                    android:layout_toLeftOf="@+id/review_btn"
                    android:layout_marginRight="8dp"/>

                <TextView
                    android:layout_width="144dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/review_text"
                    android:layout_above="@+id/noreview_btn"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="14dp"
                    android:textColor="@color/trimbe_white"
                    android:textSize="15sp"
                    android:layout_marginRight="8dp"/>

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
