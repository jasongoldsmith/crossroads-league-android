<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:conversation="http://schemas.android.com/apk/res-auto"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/img_background_map">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_b_g_s_i_g_n_i_n_2"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/back"
            android:src="@drawable/icon_back_arrow"
            android:padding="6dp"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_password_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/back"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="Change Password"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/pswrd_old_layout"
            android:layout_marginTop="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#4f000000"
            android:layout_below="@+id/change_password_text">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/pswrd_icon"
                android:src="@drawable/img_icon_password"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="22dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pswrd_edit"
                android:hint="@string/enter_current_pswd"
                android:textColorHint="@color/region_hint_textcolor"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/cursor_draw"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:password="true"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="63dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_pswd_old"
                android:src="@drawable/icon_showpassword"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/pswrd_new_layout"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#4f000000"
            android:layout_below="@+id/pswrd_old_layout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/pswrd_edit_new"
                android:textColorHint="@color/region_hint_textcolor"
                android:hint="@string/enter_new_pswd"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/cursor_draw"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:password="true"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="63dp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/show_pswd_new"
                android:src="@drawable/icon_showpassword"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/change_email_text"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/pswrd_new_layout"
            android:layout_marginTop="29dp"
            android:fontFamily="sans-serif"
            android:textStyle="bold"
            android:text="Change Email"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/email_old_layout"
            android:layout_marginTop="18dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#4f000000"
            android:layout_below="@+id/change_email_text">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:id="@+id/email_icon"
                android:src="@drawable/img_icon_email"
                android:layout_centerVertical="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="13dp"
                android:layout_marginBottom="22dp"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/email_edit"
                android:hint="@string/enter_current_pswd"
                android:textColorHint="@color/region_hint_textcolor"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/cursor_draw"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionNext"
                android:inputType="textVisiblePassword"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="63dp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/email_new_layout"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="#4f000000"
            android:layout_below="@+id/email_old_layout">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/email_edit_new"
                android:textColorHint="@color/region_hint_textcolor"
                android:hint="@string/enter_new_pswd"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/cursor_draw"
                android:background="@null"
                android:singleLine="true"
                android:imeOptions="actionDone"
                android:inputType="textVisiblePassword"
                android:nextFocusDown="@+id/send_change_pswrd"
                android:textSize="14sp"
                android:gravity="center_vertical"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="63dp" />
        </RelativeLayout>

        <android.support.v7.widget.CardView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:id="@+id/send_change_pswrd"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            conversation:cardBackgroundColor="@color/app_theme_color">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="SAVE"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </RelativeLayout>

    <include layout="@layout/activity_base" />

</RelativeLayout>
