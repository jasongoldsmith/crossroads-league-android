    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/name_layout"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/hint_background"
        android:layout_below="@+id/login_accnt">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_icon"
            android:src="@drawable/img_icon_email"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_name"
            android:hint="Enter email address"
            android:textColorHint="@color/region_hint_textcolor"
            android:textColor="@color/trimbe_white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:textSize="18sp"
            android:inputType="textVisiblePassword"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_toRightOf="@+id/name_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/pswd_layout"
        android:layout_marginTop="2dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/hint_background"
        android:layout_below="@+id/name_layout">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pswrd_icon"
            android:src="@drawable/img_icon_password"
            android:layout_centerVertical="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/login_pswrd"
            android:hint="Enter password"
            android:textColorHint="@color/region_hint_textcolor"
            android:textColor="@android:color/white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:nextFocusDown="@id/signin"
            android:textSize="18sp"
            android:layout_toRightOf="@+id/pswrd_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="15dp" />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/show_pswd"
            android:src="@drawable/icon_showpassword"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="4dp"/>
    </RelativeLayout>
    </RelativeLayout>

    <TextView
