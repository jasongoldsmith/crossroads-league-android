    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/crash_email_layout">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/crash_edittext"
        android:background="@color/hint_background"
        android:hint="What would you like to tell us?"
        android:textColorHint="@color/region_hint_textcolor"
        android:gravity="top"
        android:inputType="textVisiblePassword"
        android:nextFocusDown="@+id/send_crash"
        android:textColor="@color/trimbe_white"
        android:imeOptions="actionDone"
        android:textSize="18sp"
        android:paddingStart="17dp"
        android:paddingTop="15dp"/>
        </RelativeLayout>

    <include layout="@layout/activity_base" />

</RelativeLayout>