<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:conversation="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@drawable/img_background_map">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/img_b_g_s_i_g_n_i_n_2"
        android:scaleType="fitXY"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/back"
        android:src="@drawable/icon_back_arrow"
        android:paddingTop="22dp"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/crash_text"
        android:layout_centerHorizontal="true"
        android:text="@string/contact_us"
        android:textColor="@color/trimbe_white"
        android:textSize="16sp"
        android:layout_below="@+id/back"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/send_crash"
        android:background="@color/app_theme_color"
        android:text="SEND"
        android:fontFamily="sans-serif"
        android:layout_marginTop="60dp"
        android:textStyle="bold"
        android:textColor="@color/trimbe_white"
        android:textSize="14sp"
        android:layout_alignParentBottom="true"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/crash_email_layout"
        android:layout_marginTop="18dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@color/hint_background"
        android:layout_below="@+id/crash_text">
        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/name_icon"
            android:src="@drawable/img_icon_email"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="13dp"
            android:layout_marginBottom="22dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/crash_email"
            android:hint="Enter email address (required)"
            android:textColorHint="@color/region_hint_textcolor"
            android:textColor="@color/trimbe_white"
            android:textCursorDrawable="@drawable/cursor_draw"
            android:background="@null"
            android:textSize="18sp"
            android:inputType="textVisiblePassword"
            android:singleLine="true"
            android:imeOptions="actionNext"
            android:layout_toRightOf="@+id/name_icon"
            android:gravity="center_vertical"
            android:layout_marginLeft="17dp" />
    </RelativeLayout>

    <!--<EditText-->
