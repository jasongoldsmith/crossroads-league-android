<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.crossroadsapp.leagueoflegends"
    android:installLocation="auto">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.GET_TASKS" />

    <application
        android:name="io.branch.referral.BranchApp"
        android:allowBackup="true"
        android:icon="@drawable/img_traveler_badge_icon"
        android:label="@string/app_name">
        <receiver
            android:name="io.branch.referral.InstallListener"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <activity
            android:name="co.crossroadsapp.leagueoflegends.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- AppLink example -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- <data android:scheme="https" android:host="bnc.lt" android:pathPrefix="/your_app_id_obtained form Branch dash board " /> -->
                <data
                    android:host="bnc.lt"
                    android:pathPrefix="/IfVq"
                    android:scheme="https" /> <!-- Live App link -->
                <data
                    android:host="bnc.lt"
                    android:pathPrefix="/fgVq"
                    android:scheme="https" /> <!-- Test App link -->
            </intent-filter>
            <intent-filter>
                <data android:scheme="dlcsrd" />

                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
            </intent-filter>
        </activity>
        <activity
            android:name="co.crossroadsapp.leagueoflegends.MainActivity"
            android:label="Crossroads"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.RegisterActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.CrashReport"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.EventDetailActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.ForgotLoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateVisible|adjustResize" />

        <receiver
            android:name="co.crossroadsapp.leagueoflegends.MyGcmBroadcastReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </receiver>

        <service
            android:name="co.crossroadsapp.leagueoflegends.NotificationService"
            android:exported="false" />

        <activity
            android:name="co.crossroadsapp.leagueoflegends.ListActivityFragment"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <!-- <activity -->
        <!-- android:name=".CreateNewEvent" -->
        <!-- android:label="@string/app_name" -->
        <!-- android:screenOrientation="portrait" -->
        <!-- android:theme="@style/MyTheme" /> -->
        <activity
            android:name="co.crossroadsapp.leagueoflegends.BaseActivity"
            android:label="@string/title_activity_base"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.ChangePassword"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.ConsoleSelectionActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <meta-data
            android:name="io.branch.sdk.BranchKey"
            android:value="key_live_ilh33QPvqAgDqnVVRh8iXcnnBBaLIp97" />

        <activity
            android:name="co.crossroadsapp.leagueoflegends.UpdateConsoleActivity"
            android:label="@string/title_activity_update_console"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="11f888057a583a50a91f1434bf728d87358f6d8e" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
        android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.AddNewActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.AddFinalActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />

        <service
            android:name="co.crossroadsapp.leagueoflegends.CallbackService"
            android:enabled="true"
            android:exported="true" />

        <service
            android:name="co.crossroadsapp.leagueoflegends.BungieUserService"
            android:enabled="true"
            android:exported="true" />

        <activity
            android:name="co.crossroadsapp.leagueoflegends.PasswordReset"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.MissingUser"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name="co.crossroadsapp.leagueoflegends.MessageSent"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" />

        <service
            android:name="co.crossroadsapp.leagueoflegends.BungieUserService"
            android:enabled="true"
            android:exported="true"></service>
    </application>

</manifest>